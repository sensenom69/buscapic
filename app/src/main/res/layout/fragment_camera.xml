<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b63636">

    <org.opencv.android.JavaCameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-105dp"
        android:visibility="gone"
        android:id="@+id/show_camera_activity_java_surface_view"
        opencv:camera_id="any"
        android:layout_gravity="top" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="@color/colorPrimary"
        android:layout_gravity="left|bottom"
        android:textAlignment="center">
        <TextView
            android:id="@+id/textCoordenades"
            android:layout_width="158dp"
            android:layout_height="34dp"
            android:text="Sin señal"
            android:textColor="#ffffff"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/txtAngle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="30dp"
            android:text="Sin señal"
            android:layout_gravity="left|top"
            android:textColor="#fcfbfb"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distancia peus"
            android:id="@+id/textDistanciaPeu"
            android:textColor="#ffffff"
            android:layout_gravity="right|center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="@dimen/fab_margin"
            android:src="@android:drawable/ic_dialog_map" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angulo"
            android:id="@+id/textLabelAngle"
            android:layout_gravity="left|top"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posición"
            android:id="@+id/textLabelPosicion"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dist. a pie"
            android:id="@+id/textLabelDistPeu"
            android:layout_gravity="right|top"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distancia recta"
            android:id="@+id/textLabelDist"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distancia"
            android:id="@+id/textDistancia"
            android:textColor="#ffffff"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="10dp" />

    </FrameLayout>


    <TextView
        android:id="@+id/txtAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textColor="#fcfbfb"
        android:background="@color/colorPrimary"/>
    <TextView
        android:id="@+id/txtNomPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textColor="#fcfbfb"
        android:background="@color/colorPrimary"/>

    <com.github.mikephil.charting.charts.LineChart
        android:visibility="invisible"
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_gravity="center"
        android:layout_marginTop="51dp" />

</FrameLayout>